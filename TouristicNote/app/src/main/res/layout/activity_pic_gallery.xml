<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f7"
    android:baselineAligned="false"
    android:padding="16dp"
    tools:context="lamoot.djrbrahim.note.touristic.touristicnote.Photo_note_function.Get_PhotoNote_UI">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_borderblack"
        android:gravity="center"
        android:text="Picture Note"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner_notesphotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/imagegallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_notesphotos"
        android:layout_marginTop="19dp"
        tools:layout_editor_absoluteX="8dp"
        android:layoutAnimation="@anim/layout_animation_from_bottom"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/camera"
            android:onClick="takePic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Pic"
            android:textColor="@color/cardview_dark_background" />
    </LinearLayout>

</RelativeLayout>
